<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="{{ url_for('static',filename='styles/style.css') }}">
    <title>Job Application Tracker</title>
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Rounded:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200">
</head>
<body>
    <div class="header">
        <h1>Job Application Tracker</h1>
    </div>
    <div class="main">
        <div class="apps">
            {% if error %}
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <i class="bi bi-heartbreak-fill"></i> <strong>{{error}}</strong>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            {% endif %}
            <table>
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Company </th>
                        <th>Position </th>
                        <th>Date of apply</th>
                        <th>Site </th>
                        <th>Status </th>
                        <th>CV Version</th>
                        <th>Mode </th>
                        <th>Contract type</th>
                        <th>Job level</th>
                        <!-- Add more headers as needed -->
                    </tr>
                </thead>
                <tbody>
                    <!-- Static header row -->

                    <!-- Dynamic rows from the query -->
                    {% for item in query %}
                    <tr>
                        <td>{{ item.0 }}</td>
                        <td>{{ item.1 }}</td>
                        <td>{{ item.2 }}</td>
                        <td>{{ item.3 }}</td>
                        <td>{{ item.4 }}</td>
                        <td>{{ item.5 }}</td>
                        <td>{{ item.6 }}</td>
                        <td>{{ item.7 }}</td>
                        <td>{{ item.8 }}</td>
                        <td>{{ item.9 }}</td>
                        <!-- Add more cells as needed -->
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
            <button class="button-36" role="button" id="toggleForm">Add appliaction</button><br>
            <form action="/add_job" method="post" style="" id="applicationForm" class="hidden">
                <label for="company_name">Company name:</label>
                <input type="text" id="company_name" name="company_name"><br><br>

                <label for="position">Position:</label>
                <input type="text" id="position" name="position"><br><br>

                <label for="date_of_apply">Date of apply:</label>
                <input type="date" name="date_of_apply"><br><br>

                <label for="site">Site:</label>
                <input type="text" id="site" name="site"><br><br>
                
                <label for="status">Status:</label><br>
                <select name="status" id="status">
                    <option value="Choose option" disabled selected></option>
                    <option value="Succesfull">Succesfull</option>
                    <option value="Pending">Pending</option>
                    <option value="Declined">Declined</option>
                    <option value="Declined">Waiting for meeting</option>
                </select><br><br>

                <label for="cv_version">Cv_version:</label><br>
                <input type="text" id="cv_version" name="cv_version"><br><br>
                
                <label for="mode">Mode:</label><br>
                <select name="mode" id="mode">
                    <option value="Choose option" disabled selected></option>
                    <option value="Stationary">Stationary</option>
                    <option value="Hybrid">Hybrid</option>
                    <option value="Remote">Remote</option>
                </select><br><br>
                
                <label for="contract_type">Contract_type:</label><br>
                <select name="contract_type" id="contract_type">
                    <option value="Choose option" disabled selected></option>
                    <option value="B2B">B2B</option>
                    <option value="Trial">Trial</option>
                    <option value="Contract work">Contract work</option>
                    <option value="Mandate contract">Mandate contract</option>
                    <option value="Contract of employment">Contract of employment</option>
                </select><br><br>
                
                <label for="job_level">Job level:</label><br>
                <select name="job_level" id="job_level">
                    <option value="Choose option" disabled selected></option>
                    <option value="Junior">Junior</option>
                    <option value="Mid">Mid</option>
                    <option value="Senior">Senior</option>
                </select><br><br>

                <input type="submit" value="Add Job Listing">
            </form>
        </div>
        <div class="schedule">
            <div class="calendar-container">

                <p id="daysToHighlight" hidden>{{daysToHighlight}}</p>

                <header class="calendar-header">
                    <p class="calendar-current-date"></p>
                    <div class="calendar-navigation">
                        <span id="calendar-prev"
                            class="material-symbols-rounded">
                            chevron_left
                        </span>
                        <span id="calendar-next"
                            class="material-symbols-rounded">
                            chevron_right
                        </span>
                    </div>
                </header>
 
                <div class="calendar-body">
                    <ul class="calendar-weekdays">
                        <li>Sun</li>
                        <li>Mon</li>
                        <li>Tue</li>
                        <li>Wed</li>
                        <li>Thu</li>
                        <li>Fri</li>
                        <li>Sat</li>
                    </ul>
                    <ul class="calendar-dates"></ul>
                </div>
                
                <script src="{{ url_for('static',filename='js/calendarDialogueBox.js') }}"></script>
                <script src="{{ url_for('static',filename='js/calendar.js') }}"></script>
                <script src="{{ url_for('static',filename='js/application.js') }}"></script>

            </div>

        </div>
        
    </div>
    <div class="calendarDialogueBox">
        <h1>Calendar details</h1>
        <div class="calendarDialogue">
        </div>
    </div>
    
    
</body>
</html>